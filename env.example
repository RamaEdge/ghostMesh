# GhostMesh Environment Configuration
# Copy this file to .env and customize for your deployment

# MQTT Configuration
MQTT_HOST=mosquitto
MQTT_PORT=1883

# Service Credentials (change these in production!)
MQTT_USERNAME_IOT=iot
MQTT_PASSWORD_IOT=iotpass
MQTT_USERNAME_GATEWAY=gateway
MQTT_PASSWORD_GATEWAY=gatewaypass
MQTT_USERNAME_DETECTOR=detector
MQTT_PASSWORD_DETECTOR=detectorpass
MQTT_USERNAME_EXPLAINER=explainer
MQTT_PASSWORD_EXPLAINER=explainerpass
MQTT_USERNAME_POLICY=policy
MQTT_PASSWORD_POLICY=policypass
MQTT_USERNAME_DASHBOARD=dashboard
MQTT_PASSWORD_DASHBOARD=dashboard123

# LLM Server Configuration
LLM_SERVER_URL=http://llm-server:8080
MODEL_PATH=/models/tinyllama-1.1b-chat.gguf
DEFAULT_USER_TYPE=hybrid
EXPLANATION_TIMEOUT=10

# Dashboard Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Performance Configuration
DASHBOARD_REFRESH_RATE_CONNECTED=0.5
DASHBOARD_REFRESH_RATE_DISCONNECTED=2.0

# Security Configuration
CONTAINER_USER=appuser
CONTAINER_UID=1000
CONTAINER_GID=1000
